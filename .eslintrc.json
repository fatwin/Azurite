{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "plugins": [
    "react"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "rules": {
    "block-spacing": [2, "always"],
    "indent": [2, 2],
    "object-curly-spacing": [2, "always"],
    "quotes": [1, "single"],
    "semi": [1, "never"]
  }
}